                            <id>cmine</id>
                        </program>
                         <program>
                            <mainClass>org.contentmine.ami.plugins.EntityAnalyzer</mainClass>
                            <!--  description:  -->
                            <id>ami-frequencies</id>
                        </program>
                         <program>
                            <mainClass>org.contentmine.ami.plugins.gene.GenePlugin</mainClass>
                            <!--  description:  -->
                            <id>ami-gene</id>
                        </program>
                         <program>
