                        </program>
                        <program>
                            <mainClass>org.contentmine.ami.plugins.word.WordPlugin</mainClass>
                            <!--  description:  -->
                            <id>ami-word</id>
                        </program>
                    </programs>

                    <!-- Prevent long directories -->
                    <repositoryLayout>flat</repositoryLayout>
